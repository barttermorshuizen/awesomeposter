{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "outDir": "./.tsbuild",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "types": [
      "node"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./routes/**/*.ts",
    "./server/**/*.ts",
    "./types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".nitro",
    ".output",
    "__tests__",
    "tests"
  ]
}
