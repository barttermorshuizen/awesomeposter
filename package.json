{
  "name": "awesomeposter",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "dev:app": "vite",
    "dev:api": "NITRO_NO_UNIX_SOCKET=1 PORT=3001 nitropack dev",
    "dev:agents": "cd packages/agents-server && npm run dev",
    "dev:both": "run-p dev:app dev:agents",
    "dev:shared": "cd packages/shared && npm run dev",
    "dev:all": "run-p dev:app dev:api dev:agents dev:shared",
    "build": "run-p type-check \"build-only {@}\" --",
    "build:agents": "cd packages/agents-server && npm run build",
    "build:api": "nitropack build",
    "start:api": "node .output/server/index.mjs",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "imap:poller": "node scripts/imap-poller.mjs",
    "flags": "node scripts/feature-flags.mjs",
    "bmad:refresh": "bmad-method install -f -i codex",
    "bmad:list": "bmad-method list:agents",
    "bmad:validate": "bmad-method validate"
  },
  "dependencies": {
    "@awesomeposter/db": "file:./packages/db",
    "@awesomeposter/shared": "file:./packages/shared",
    "@aws-sdk/client-s3": "^3.864.0",
    "@aws-sdk/s3-request-presigner": "^3.873.0",
    "@mdi/font": "^7.4.47",
    "@upstash/redis": "^1.35.4",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.4",
    "googleapis": "^160.0.0",
    "imapflow": "^1.0.164",
    "open": "^10.2.0",
    "openai": "^5.12.2",
    "pg": "^8.16.3",
    "pinia": "^3.0.3",
    "sass": "^1.91.0",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1",
    "vuetify": "^3.9.6",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "~10.3.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "nitropack": "^2.12.4",
    "npm-run-all2": "^8.0.4",
    "typescript": "~5.8.0",
    "vite": "^7.0.6",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.4"
  }
}
